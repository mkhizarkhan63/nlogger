<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Trace" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->

   <targets>
	
	<target xsi:type="Console" name="console" layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:inner=${newline}${exception:format=tostring}}"  /> 
	  <!--<target xsi:type="Console" name="console"  layout=" ${level} ${message} ${onexception:EXCEPTION OCCURRED\:${exception:format=type,message,method:maxInnerExceptionLevel=5:innerFormat=shortType,message,method}}" />  -->
  	
        <target xsi:type="Database"
      name="dbTarget"
      dbProvider="MySql.Data.MySqlClient.MySqlConnection, MySql.Data"
      connectionString="${appsettings:name=ConnectionStrings.DefaultConnection}" 
	 keepConnection="true"
	  commandText="INSERT INTO exception(Application,Logged,Level,Message,Logger,Callsite,Exceptions) VALUES (@application,@logged,@level,@message,@logger,@callSite,@exception)">
            <parameter name="@application" layout="AspNetCoreNlog" />
        <parameter name="@logged" layout="${date}" />
        <parameter name="@level" layout="${level}" />
        <parameter name="@message" layout="${message}" />
 
        <parameter name="@logger" layout="${logger}" />
        <parameter name="@callSite" layout="${callsite:filename=true}" />
        <parameter name="@exception" layout="${exception:tostring}" />
     
        </target>
    </targets>
    <rules>
        <logger name="*" minlevel="Trace" writeTo="dbTarget" />
	<logger name="*" minlevel="Error"   writeTo="console" />
    	<logger name="Microsoft.*" maxlevel="Info" final="true" />
   	
    </rules>
</nlog>
